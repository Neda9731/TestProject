@model HotelwebSite.Models.Reservation

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        
        <div class="container text-right w-25" style="color:#00008B;">
            <h4>رزرو اتاق</h4><hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
            
               
                <div class="col-lg-12">
                    کد اتاق
                    @Html.DropDownList("Code_r", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Code_r, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
               
                <div class="col-lg-12">
                    کد کاربر
                    @Html.DropDownList("Code_m", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Code_m, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
               
                <div class="col-lg-12">
                    تاریخ رزرو
                    @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-12">
                    <input type="submit" value="Create" class="btn btn-default" style="color:#00008B;background-color:#CEF7FA" />
                </div>
            </div>
        </div>

            
    </div>
}

