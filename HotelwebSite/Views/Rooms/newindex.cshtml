@model IEnumerable<HotelwebSite.Models.Rooms>
@{
    ViewBag.Title = "newindex";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<div class="container text-right p-4 m-5" style="color:#1E90FF">
  
   <h3 class="text-danger"> @TempData["message"]</h3>
    <h2>لیست اتاق ها</h2>
    <br />
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-lg-4 col-ms-12 mb-3">
                <div class="card" style="width:300px">
                    <img src="@Url.Content(item.Image_r)" width="300" height="200" />
                   <form action="~/Reservations/reserv" method="post">
<input type="hidden" name="roomCode" value="@item.Code_r" />
<input type="submit" class="btn btn-dark" style="color:#1E90FF" value="رزرو اتاق"/> 
                   </form>
                  
                    <div class="card-body" style="color:#0000FF">
                        ظرفیت اتاق:
                        @Html.DisplayFor(modelItem => item.Number_r)<br />
                        قیمت اتاق:
                        @Html.DisplayFor(modelItem => item.price_r)
                    </div>
                </div>
            </div>

        }
    </div>
</div>

