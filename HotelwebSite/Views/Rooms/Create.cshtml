@model HotelwebSite.Models.Rooms

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


@using (Html.BeginForm("Create", "Rooms", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div class="container text-right w-25" style="color:#00008B;"><br />
            <h4>اتاق</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
               
                <div class="col-lg-12"> تعداد نفرات ظرفیت اتاق
                    @Html.EditorFor(model => model.Number_r, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Number_r, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
               
                <div class="col-lg-12"> قیمت اتاق
                    @Html.EditorFor(model => model.price_r, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.price_r, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
            
                <div class="col-lg-12"> درباره ی اتاق
                    @Html.EditorFor(model => model.Desc_r, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Desc_r, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
              
                <div class="col-lg-12">  تصویر اتاق
            @*  @Html.EditorFor(model => model.Image_r, new { htmlAttributes = new { @class = "form-control" } })*@  
                    <input id="file1" type="file" name="uploadedfiles" class="btn btn-success" style="height:200px;width:200px;" />
                    @Html.ValidationMessageFor(model => model.Image_r, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class=" col-lg-12">
                    <input type="submit" value="ثبت اتاق جدید" class="btn btn-default" style="color:#00008B;background-color:#CEF7FA" />
                </div>
            </div>
        </div>
       
    </div>
}


