@model HotelwebSite.Models.Rooms

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <div class="container text-right w-25" style="color:#00008B;"><br /><br /><br />
            <h2>ویرایش اتاق</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code_r)

            <div class="row">
                <div class="col-lg-12">ظرفیت اتاق
                    @Html.EditorFor(model => model.Number_r, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Number_r, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
               
                <div class="col-lg-12">
                    قیمت اتاق
                    @Html.EditorFor(model => model.price_r, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.price_r, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    درباره ی اتاق
                    @Html.EditorFor(model => model.Desc_r, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Desc_r, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
               
                <div class="col-lg-12">
                    تصویر<br />
                    <img src="@Url.Content(Model.Image_r)" width="200" />
                  @*@Html.EditorFor(model => model.Image_r, new { htmlAttributes = new { @class = "form-control" } }) *@  
                    @Html.ValidationMessageFor(model => model.Image_r, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class=" col-lg-12">
                    <input type="submit" value="ذخیره" class="btn btn-default" style="color:#00008B;background-color:#CEF7FA" />
                </div>
            </div>
        </div>
        </div>
}

